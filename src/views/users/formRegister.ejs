<%- include('../partials/messages')  %>
<div class="container">
    <div class="login-container">
        <div class="register">
            <h2>Registrarse</h2>
            <form action="/register" method="post">
                <input type="text" name="name" placeholder="Nombre" class="nombre" required>
                <input type="text" name="ap1" placeholder="Apellido Paterno" class="Ap1" required>
                <input type="text" name="ap2" placeholder="Apellido Materno" class="Ap2" required>
                <input type="text" name="email" placeholder="Correo" class="correo" required>
                <input type="password" name="password" placeholder="Contraseña" class="password" required>
                <input type="password" name="confirm_password" placeholder="Confirmar Contraseña" class="repass" required>
                <button class="submit">Confirmar datos</button>
            </form>
        </div>
        <div class="login">
            <h2>Inicia sesión</h2>
            <div class="login-items">
                <form action="/login" method="post">
                    <br>
                    <input type="text" name="email" placeholder="Correo" class="correo" required>
                    <input type="password" name="password" placeholder="Contraseña" class="password"required>
                    <button class="submit">Iniciar sesión</button>
                </form>
            </div>
        </div>
    </div>
</div>
